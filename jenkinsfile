pipeline {
    agent any

    environment {
        // SonarQube authentication token stored in Jenkins credentials
        SONARQUBE = credentials('sonarqube-token')
    }

    tools {
        maven 'Maven3'   // Name of Maven installation in Jenkins Global Tool Configuration
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/CHINNA-SAMY2/PROJECT_CHAT_BOT.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQubeServer') {  // Must match the name you set in Jenkins → System → SonarQube installations
                    sh 'mvn clean verify sonar:sonar'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }

    post {
        always {
            // Publish test results
            junit '**/target/surefire-reports/*.xml'

            // Archive build artifacts
            archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
        }
    }
}
